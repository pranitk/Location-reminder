<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey_200"
    android:orientation="vertical"
    tools:context="com.pranitkulkarni.remindbylocation.fragments.FragmentHome">

    <android.support.v7.widget.CardView
        android:layout_margin="8dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:cardBackgroundColor="@android:color/white"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <RelativeLayout
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/header_text"
                android:padding="8dp"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="6dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_text_reminder_dark"
                    android:layout_width="64dp"
                    android:layout_height="64dp" />

                <TextView
                    android:layout_gravity="top"
                    android:layout_margin="12dp"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:text="Text\nreminder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <TextView
                android:text="@string/text_reminder_note"
                android:padding="12dp"
                android:layout_below="@id/header_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/add_text_reminder"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="12dp"
                android:text="ADD NOW"
                android:background="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_margin="8dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:cardBackgroundColor="@android:color/white"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <RelativeLayout
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/header"
                android:padding="8dp"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="6dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_sms_dark"
                    android:layout_width="64dp"
                    android:layout_height="64dp" />

                <TextView
                    android:layout_gravity="top"
                    android:layout_margin="12dp"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:text="SMS\nreminder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <TextView
                android:text="@string/message_reminder_note"
                android:padding="12dp"
                android:layout_below="@id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />




            <android.support.v7.widget.AppCompatButton
                android:id="@+id/add_message_reminder"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="12dp"
                android:text="ADD NOW"
                android:background="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <!--
    <android.support.v7.widget.AppCompatButton
